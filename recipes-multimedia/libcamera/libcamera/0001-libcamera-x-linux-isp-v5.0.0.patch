+static int16_t toCConvReg(int32_t coeff)
+{
+	/* Convert coefficient (Unit = 100000000 for "x1.0") to register format */
+	int64_t val = coeff;
+	int16_t reg;
+
+	val = (val * 256) / kPrecisionFactor;
+	if (val >= 0)
+		reg = val;
+	else
+		reg = ((-val ^ 0x7FF) + 1) & 0x7FF;
+
+	return reg;
+}
